body {
    box-sizing: content-box;
    position: absolute;
    right: 0;
    left: 0;
    top: 0;
    bottom: 0;
}

h1 {
    text-align: center;
}

.contentMenu {
    position: absolute;
    top: 3.7em;
    left: 0;
    height: 100%;
    width: 10em;
    background-color: #eee;
    padding: 0;
    list-style: none;
}

.contentMenu-itemLink {
    padding: 1em;
    display: block;
    
    &:hover {
        background-color: white;
    }
}

.page {
    position: relative;
    margin-top: 3.7em;
    margin-left: 10em;
    
    padding: 1em 5em;
    
}

.formFieldWrapper {
    position: relative;
}

.formActionBar {
    
    padding: 1em 0;
    
    &.stickToBottom {
      position: fixed;
      bottom: 0;
      display: block;
      margin-left: -5em;
      padding-left: 5em !important;
      background-color: white;
      border-top: 1px solid #ddd;
      width: 100%;
    }
}

.formActionBar-actions {
    
}

/*

    MODAL

*/

.ReactModal__Overlay {
  -webkit-perspective: 600;
  perspective: 600;
  opacity: 0;
  overflow-x: hidden;
  overflow-y: auto;
  background-color: rgba(0, 0, 0, 0.5);
}

.ReactModal__Overlay--after-open {
  opacity: 1;
  transition: opacity 150ms ease-out;
}

.ReactModal__Content {
  -webkit-transform: scale(0.5) rotateX(-30deg);
}

.ReactModal__Content--after-open {
  -webkit-transform: scale(1) rotateX(0deg);
  transition: all 150ms ease-in;
}

.ReactModal__Overlay--before-close {
  opacity: 0;
}

.ReactModal__Content--before-close {
  -webkit-transform: scale(0.5) rotateX(30deg);
  transition: all 150ms ease-in;
}

.ReactModal__Content.modal-dialog {
  border: none;
  background-color: transparent;
}

.ReactModal__Overlay {
    background-color: rgba(0, 0, 0, 0.75);
    text-align: center;
}
.ReactModal__Content {
    position: relative;
    display: inline-block;
    margin-top: 10%;
    width: 95%;
    max-width: 40em;
    min-height: 25em;
    max-height: 80%;
    border: 1px solid #ccc;
    background: #fff;
    overflow: auto;
    -webkit-overflow-scrolling: touch;
    border-radius: 4px;
    outline: none;
    padding: 20px;
}
@media (max-width: 768px) {
    .ReactModal__Content {
        top: 10px;
        left: 10px;
        right: 10px;
        bottom: 10px;
        padding: 10px;
    }
}

.modalButtonBar {
    position: absolute;
    bottom: 20px;
    left: 20px;
    right: 20px;
}