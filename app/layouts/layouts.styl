body {
    box-sizing: content-box;
    position: absolute;
    right: 0;
    left: 0;
    top: 0;
    bottom: 0;
}

h1 {
    text-align: center;
}

.contentMenu {
    position: absolute;
    top: 3.7em;
    left: 0;
    height: 100%;
    width: 10em;
    background-color: #eee;
    padding: 0;
    list-style: none;
}

.contentMenu-itemLink {
    padding: 1em;
    display: block;
    
    &:hover {
        background-color: white;
    }
}

.page {
    position: relative;
    margin-top: 3.7em;
    margin-left: 10em;
    
    padding: 1em 5em;
    
}

.formFieldWrapper {
    position: relative;
}


.btn {
    margin: 0 1em;
    
    &:first-child {
        margin-left: 0;
    }
}

.formActionBar {
    
    padding: 1em 0;
    
    &.stickToBottom {
      position: fixed;
      bottom: 0;
      display: block;
      margin-left: -5em;
      padding-left: 5em !important;
      background-color: white;
      border-top: 1px solid #ddd;
      width: 100%;
    }
}

